<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.compassbook.snorechat.Main"
    android:weightSum="1">

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:text="Login"
        android:id="@+id/bShowLogin"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textColor="#d4d3d3"
        android:textStyle="bold"
        android:background="#7a4444"
        android:onClick="showLogin"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Register"
        android:id="@+id/bShowRegister"
        android:textSize="22dp"
        android:background="#7a4444"
        android:textColor="#d4d3d3"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="showRegister"
        android:layout_gravity="center" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/about_us_text"
        android:textStyle="bold"
        android:textColor="#d4d3d3"
        android:id="@+id/bAbout"
        android:background="#7a4444"
        android:onClick="showAbout"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center" />


</LinearLayout>
