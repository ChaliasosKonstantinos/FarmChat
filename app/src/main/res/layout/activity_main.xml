<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.compassbook.snorechat.Main"
    android:weightSum="1">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_description"/>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />



    <Button
        android:text="@string/login"
        android:id="@+id/bShowLogin"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:background="@color/transparent"
        android:onClick="showLogin"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#ecececec" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/register"
        android:id="@+id/bShowRegister"
        android:textSize="22sp"
        android:background="@color/transparent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="italic"
        android:onClick="showRegister"
        android:layout_gravity="center" />

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#ecececec" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/about_us"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:id="@+id/bAbout"
        android:background="@color/transparent"
        android:onClick="showAbout"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_gravity="center" />


</LinearLayout>
