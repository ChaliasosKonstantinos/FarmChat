<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.compassbook.snorechat.Main"
    android:weightSum="1">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />



    <Button
        android:text="Login"
        android:id="@+id/bShowLogin"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/cypress"
        android:onClick="showLogin"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Register"
        android:id="@+id/bShowRegister"
        android:textSize="22sp"
        android:background="@color/cypress"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:onClick="showRegister"
        android:layout_gravity="center" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/about_us_text"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/bAbout"
        android:background="@color/cypress"
        android:onClick="showAbout"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_gravity="center" />


</LinearLayout>
