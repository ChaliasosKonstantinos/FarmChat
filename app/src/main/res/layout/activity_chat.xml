<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:id="@+id/messagesList"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:scrollbars="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ecececec" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="@string/message"
        android:id="@+id/MessageTextField" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ecececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@color/cypress"
            android:id="@+id/bSendWS"
            android:onClick="SendMessageToTxt"
            android:layout_alignParentBottom="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@color/cypress"
            android:id="@+id/bClearMessages"
            android:onClick="ClearMessages"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/bSendWS"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</LinearLayout>
