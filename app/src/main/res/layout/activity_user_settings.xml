<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.compassbook.snorechat.UserSettings">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ec000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password Change"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your password"
        android:layout_marginTop="10dp"
        android:id="@+id/tvCurrentPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edw mpainei o torinos kwdikos"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView4" />

    <View
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:background="#ecececec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_marginTop="10dp"

        android:id="@+id/tvNewPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etNewPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginTop="10dp"
        android:id="@+id/tvNewPassword2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etNewPassword2" />

    <Button
        android:id="@+id/bChangePassword"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:background="#0d2723"
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="changePassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ec000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email Change"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email"
        android:layout_marginTop="10dp"
        android:id="@+id/tvCurrentEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edw mpainei to torino email"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView6" />

    <View
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:background="#ecececec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_marginTop="10dp"

        android:id="@+id/tvNewEmail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etNewEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginTop="10dp"
        android:id="@+id/tvNewEmail2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:id="@+id/etNewEmail2" />

    <Button
        android:id="@+id/bChangeEmail"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:background="#0d2723"
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="changeEmail" />

    </LinearLayout>

</ScrollView>

